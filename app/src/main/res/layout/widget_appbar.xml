<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/appbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:titleTextColor="@color/accent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:popupTheme="@style/Base.ThemeOverlay.AppCompat.Light"
        app:layout_scrollFlags="scroll|enterAlways"/>

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/tab_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        app:stl_defaultTabTextColor="@color/white"
        app:stl_defaultTabTextMinWidth="80dp"
        app:stl_indicatorColor="@color/accent"
        app:stl_indicatorCornerRadius="1.5dp"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorWithoutPadding="true"
        app:stl_indicatorThickness="3dp"
        android:background="@color/primary"
        app:stl_dividerColor="@color/primary"
        app:stl_defaultTabTextSize="15sp"
        android:visibility="gone"/>


</android.support.design.widget.AppBarLayout>
